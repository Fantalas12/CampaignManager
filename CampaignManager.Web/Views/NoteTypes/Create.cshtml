            </div>
            <div class="form-group">
                <label asp-for="PlayerTemplateId" class="control-label"></label>
                <input asp-for="PlayerTemplateId" class="form-control" />
                <span asp-validation-for="PlayerTemplateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameMasterTemplateId" class="control-label"></label>
                <input asp-for="GameMasterTemplateId" class="form-control" />
                <span asp-validation-for="GameMasterTemplateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

<p></p>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to Index</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
