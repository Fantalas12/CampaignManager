            </div>
            <div class="form-group">
                <label asp-for="GameMasterTemplateId" class="control-label"></label>
                <input asp-for="GameMasterTemplateId" class="form-control" />
                <span asp-validation-for="GameMasterTemplateId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>

    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to Index</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
