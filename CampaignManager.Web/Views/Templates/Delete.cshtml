@model CampaignManager.Persistence.Models.Template

@{
    ViewData["Title"] = "Delete Template";
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Delete Template</h1>

<h3>Are you sure you want to delete this template?</h3>
<div class="details-view">
    <h4>@Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Templates" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
