@model CampaignManager.Persistence.Models.Template

@{
    ViewData["Title"] = "Edit Template";
}

<h1>Edit Template</h1>

<div class="details-view">
<h4>Template</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <label class="control-label">Content</label>
                <textarea asp-for="Content" class="form-control" style="width: 200%; height: 200px;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <a class="btn btn-primary" asp-controller="Templates" asp-action="Index">Back to Index</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
