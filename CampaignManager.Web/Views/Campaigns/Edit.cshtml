@model CampaignManager.Persistence.Models.Campaign

@{
    ViewData["Title"] = "Edit Campaign";
}

<h1>Edit Campaign</h1>

<h4>Campaign</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameTime" class="control-label"></label>
                <input asp-for="GameTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="GameTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label><br />
                @if (Model?.Image != null)
                {
                    <img src="@Url.Action("DisplayImage", "Campaigns", new { id = Model.Id })" class="item" />
                }
                <input asp-for="Image" type="file" accept="image/png" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Campaigns" asp-action="IndexOwned">Back to your campaigns</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
