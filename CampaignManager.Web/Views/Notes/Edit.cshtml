@model CampaignManager.Persistence.Models.Note

@{
    ViewData["Title"] = "Edit Note";
}

<h1>Edit Note</h1>

<div class="details-view">
<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" style="width: 200%; height: 200px;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label class="control-label">Gamedate</label>
                    <input asp-for="InGameDate" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="InGameDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SessionId" />
            <button type="submit" class="btn btn-primary">Save</button>
        </form>

    </div>
</div>
</div>

<div>
    <a class="btn btn-primary" asp-controller="Sessions" asp-action="Details" asp-route-id="@Model.SessionId">Back to Session</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}